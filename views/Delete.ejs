    <div class="scroll">
      <% for (var i = pic.length - 1; i >= 0; i--) {
          var image = pic[i];
          if (image.fields === "wedding") { %>
            <form action="/admindelete" method="post">
              <div class="box">
                <input class="checkbox" type="checkbox" name="checkbox" value="<%= image._id %>" onchange="this.form.submit()">
